<Window x:Class="Contadores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contadores"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Margin="10" Columns="2">
        <TextBlock FontSize="200" Text="{Binding ValorVerde}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Green"></TextBlock>
        <TextBlock FontSize="200" Text="{Binding ValorRojo}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" ></TextBlock>
    </UniformGrid>
</Window>
